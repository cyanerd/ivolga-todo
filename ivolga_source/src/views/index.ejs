<%- include('templates/header', {title: 'Главная страница - Ivolga'}) %>

<main>
    <!-- Главный баннер -->
    <section class="main-banner">
        <div class="main-banner__swiper swiper">
            <div class="swiper-wrapper">
                <!-- Слайд 1 -->
                <div class="main-banner__slide swiper-slide">
                    <img src="<%=require('@img/banner/banner1.jpg')%>" alt="Новая коллекция" class="main-banner__image">
                    <div class="main-banner__overlay"></div>
                    <div class="main-banner__content">
                        <h2 class="main-banner__title">Новая коллекция весна-лето 2023</h2>
                        <a href="#" class="main-banner__link">
                            Смотреть коллекцию
                            <svg width="20" height="20" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg">
                                <path d="M4 10H16M16 10L10 4M16 10L10 16" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
                            </svg>
                        </a>
                    </div>
                </div>
                
                <!-- Слайд 2 -->
                <div class="main-banner__slide swiper-slide">
                    <img src="<%=require('@img/banner/banner2.jpg')%>" alt="Скидки до 50%" class="main-banner__image">
                    <div class="main-banner__overlay"></div>
                    <div class="main-banner__content">
                        <h2 class="main-banner__title">Скидки до 50% на прошлые коллекции</h2>
                        <a href="#" class="main-banner__link">
                            Смотреть товары
                            <svg width="20" height="20" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg">
                                <path d="M4 10H16M16 10L10 4M16 10L10 16" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
                            </svg>
                        </a>
                    </div>
                </div>
                
                <!-- Слайд 3 -->
                <div class="main-banner__slide swiper-slide">
                    <img src="<%=require('@img/banner/banner3.jpg')%>" alt="Эксклюзивные модели" class="main-banner__image">
                    <div class="main-banner__overlay"></div>
                    <div class="main-banner__content">
                        <h2 class="main-banner__title">Эксклюзивные модели для особых случаев</h2>
                        <a href="#" class="main-banner__link">
                            Перейти в каталог
                            <svg width="20" height="20" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg">
                                <path d="M4 10H16M16 10L10 4M16 10L10 16" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
                            </svg>
                        </a>
                    </div>
                </div>
            </div>
            
            <!-- Навигация для слайдера -->
            <div class="main-banner__nav">
                <div class="main-banner__nav-prev">
                    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <path d="M15 4L7 12L15 20" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                    </svg>
                </div>
                <div class="main-banner__nav-next">
                    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <path d="M9 4L17 12L9 20" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                    </svg>
                </div>
            </div>
            
            <!-- Пагинация для слайдера -->
            <div class="main-banner__pagination"></div>
        </div>
    </section>
    
